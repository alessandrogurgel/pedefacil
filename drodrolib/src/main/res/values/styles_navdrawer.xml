<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Section -->
    <style name="NavDrawerSectionStyle">

    </style>

    <style name="NavDrawerSectionStyle.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Item with icon -->
    <style name="NavDrawerLabelWithIconStyle">
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/navdrawer_background_selector</item>
    </style>

    <style name="NavDrawerLabelWithIconStyle.Icon">
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="NavDrawerLabelWithIconStyle.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Login -->
    <style name="NavDrawerLoginStyle">
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="NavDrawerLoginStyle.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NavDrawerLoginStyle.ProviderTextView">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Divider -->
    <style name="NavDrawerDividerStyle">
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>