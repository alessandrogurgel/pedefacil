<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/mainmenu_button0"
            android:text="@string/mainmenu_button0"
            android:textColor="@android:color/white"
            android:layout_height="50dp"
            android:layout_width="match_parent">
        </Button>

        <Button
            android:id="@+id/mainmenu_button1"
            android:text="@string/mainmenu_button1"
            android:textColor="@android:color/white"
            android:layout_height="50dp"
            android:layout_width="match_parent">
        </Button>

        <Button
            android:id="@+id/mainmenu_button2"
            android:text="@string/mainmenu_button2"
            android:textColor="@android:color/white"
            android:layout_height="50dp"
            android:layout_width="match_parent">
        </Button>

        <Button
            android:id="@+id/mainmenu_button3"
            android:text="@string/mainmenu_button3"
            android:textColor="@android:color/white"
            android:layout_height="50dp"
            android:layout_width="match_parent">
        </Button>

        <Button
            android:id="@+id/mainmenu_button4"
            android:text="@string/mainmenu_button4"
            android:textColor="@android:color/white"
            android:layout_height="50dp"
            android:layout_width="match_parent">
        </Button>

    </LinearLayout>

</RelativeLayout>