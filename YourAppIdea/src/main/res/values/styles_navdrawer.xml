<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NavDrawerStyle">
        <!-- <item name="android:divider">@color/navdrawer_divider</item> -->
        <item name="android:dividerHeight">0.1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <!-- Item with icon -->
    <style name="NavDrawerLabelWithIconStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/navdrawer_background_selector</item>
    </style>

    <style name="NavDrawerLabelWithIconStyle.Icon">
        <item name="android:layout_height">23dp</item>
    </style>

    <style name="NavDrawerLabelWithIconStyle.TextView" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>