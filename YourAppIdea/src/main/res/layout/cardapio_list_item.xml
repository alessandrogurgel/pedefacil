<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardapio_item_cardview"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/cardapio_item_picture"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                tools:src="@drawable/airport_takeoff"
                android:paddingRight="15dp"/>

            <TextView
                android:id="@+id/cardapio_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cardapio_item_picture"
                android:gravity="center_vertical"
                android:text="nome do prato"
                android:textAppearance="@style/TextAppearance.AppCompat.Title">
            </TextView>

            <TextView
                android:id="@+id/cardapio_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/cardapio_item_name"
                android:gravity="right|center_vertical"
                tools:text="category"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1">
            </TextView>

            <TextView
                android:id="@+id/flight_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/flight_from"
                android:layout_marginLeft="10px"
                android:gravity="right|center_vertical"
                tools:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignLeft="@+id/flight_name">
            </TextView>

            <TextView
                android:id="@+id/cardapio_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/flight_type"
                android:layout_marginLeft="10px"
                android:gravity="center_vertical"
                tools:text="R$ price"
                android:textColor="?attr/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1">
            </TextView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>